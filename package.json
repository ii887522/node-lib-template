{
  "name": "@ii887522/node-lib-template",
  "version": "0.0.0",
  "description": "A template used to build a Node.js library in TypeScript without worrying about project configuration anymore.",
  "type": "module",
  "scripts": {
    "lint": "eslint --ext .ts .",
    "lint:watch": "esw --ext .ts --watch .",
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest",
    "test:ci": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest --coverage --ci",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest --coverage --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ii887522/node-lib-template.git"
  },
  "keywords": [],
  "author": "ii887522",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ii887522/node-lib-template/issues"
  },
  "homepage": "https://github.com/ii887522/node-lib-template#readme",
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "@types/node": "^18.7.23",
    "@typescript-eslint/eslint-plugin": "5.38.1",
    "@typescript-eslint/parser": "5.38.1",
    "cross-env": "^7.0.3",
    "eslint": "8.24.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard-with-typescript": "23.0.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "15.3.0",
    "eslint-plugin-promise": "6.0.1",
    "eslint-watch": "8.0.0",
    "jest": "^29.3.1",
    "prettier": "2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  }
}
